<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/custom_profile_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="341dp"
        android:src="@drawable/profile_image" />

    <TextView
        android:id="@+id/custom_profile_name"
        android:layout_width="77dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="222dp"
        android:layout_marginLeft="292dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:layout_toEndOf="@+id/custom_profile_image"
        android:text="الاسم:"
        android:textColor="@android:color/background_light"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_user_last_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="224dp"
        android:layout_marginLeft="294dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/custom_profile_image"
        android:text="أخر ظهور :"
        android:textColor="@android:color/background_light"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>