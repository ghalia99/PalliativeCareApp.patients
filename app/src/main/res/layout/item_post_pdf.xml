<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- item_post_pdf.xml -->

    <!-- Assuming the root layout is a LinearLayout -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/textViewPdfFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- ImageView to display the PDF icon -->
        <ImageView
            android:id="@+id/imageViewPdfIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            />

        <!-- TextView to display the PDF file name -->

        <!-- Other UI components for displaying additional information about the PDF file, such as file size, upload date, etc. can be added here -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>