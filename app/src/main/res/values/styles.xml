<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize the color palette -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize the navigation bar -->
        <item name="navigationViewStyle">@style/AppTheme.NavigationView</item>
        <!-- Disable the default ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NavigationView" parent="Widget.Design.NavigationView">
        <!-- Customize the background color of the navigation bar -->
        <item name="android:background">@color/colorPrimary</item>
        <!-- Customize the color of the icon and text when not selected -->
        <item name="itemTextColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <!-- Customize the color of the icon and text when selected -->
        <item name="itemBackground">@drawable/navigation_item_background</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>
